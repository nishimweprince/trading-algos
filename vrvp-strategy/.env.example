# VRVP Strategy Environment Configuration

# Capital.com API Configuration (REQUIRED)
CAPITALCOM_API_KEY=your_api_key_here
CAPITALCOM_API_PASSWORD=your_api_password_here
CAPITALCOM_USERNAME=your_capital_com_username_or_email  # REQUIRED: Your Capital.com login username/email
CAPITALCOM_ENVIRONMENT=demo  # Use 'demo' for paper trading, 'live' for production

# WebSocket Configuration
ENABLE_WEBSOCKET=true  # Set to 'false' to use REST-only polling mode

# Risk Settings (optional overrides)
RISK_PER_TRADE=2.0
MAX_DRAWDOWN=15.0

# Trading Settings (optional overrides)
INSTRUMENTS=EUR_USD,GBP_USD
TIMEFRAME=1H

# Logging
LOG_LEVEL=INFO

# Notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
