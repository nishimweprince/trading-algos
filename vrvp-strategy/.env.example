# VRVP Strategy Environment Configuration

# Capital.com API Configuration (REQUIRED)
CAPITALCOM_API_KEY=your_api_key_here
CAPITALCOM_API_PASSWORD=your_api_password_here
CAPITALCOM_USERNAME=your_capital_com_username_or_email  # REQUIRED: Your Capital.com login username/email
CAPITALCOM_ENVIRONMENT=demo  # Use 'demo' for paper trading, 'live' for production

# WebSocket Configuration
ENABLE_WEBSOCKET=true  # Set to 'false' to use REST-only polling mode

# Risk Settings (optional overrides)
RISK_PER_TRADE=2.0
MAX_DRAWDOWN=15.0

# Deriv
DERIV_API_KEY=
DERIV_APP_ID=

# Trading Settings (optional overrides)
# INSTRUMENTS: Comma-separated list of trading pairs to monitor
# Each pair runs separately with its own signal generator
INSTRUMENTS=EUR_USD,GBP_USD,USD_JPY
TIMEFRAME=1H

# Data Fetching Settings
FETCH_INTERVAL_MINUTES=5  # How often to fetch data (default: 5 minutes)

# Logging
LOG_LEVEL=INFO

# API Server Configuration (for FastAPI/uvicorn server mode)
HOST=0.0.0.0  # Host to bind to (use 127.0.0.1 for localhost only)
PORT=8000      # Port to bind to

# Email Notifications via Resend (optional)
# Get your API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxx
# Comma-separated list of email addresses to receive signal notifications
NOTIFICATION_EMAILS=trader1@example.com,trader2@example.com
# Optional: Custom from email (must be verified in Resend or use default onboarding@resend.dev)
# NOTIFICATION_FROM_EMAIL=VRVP Strategy <onboarding@resend.dev>

# Telegram Notifications (optional - not yet implemented)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
